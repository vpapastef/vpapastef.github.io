---
interface Props {
  title: string;
  description: string;
  category: string;
  tech: string[];
  slug: string;
}

const { title, description, category, tech, slug } = Astro.props;
---

<a href={`/projects/${slug}/`} class="group block rounded-lg border border-gray-200 p-5 transition-colors hover:border-gray-300 dark:border-gray-800 dark:hover:border-gray-700">
  <div class="mb-2">
    <span class="inline-block rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
      {category === 'data-ml' ? 'Data / ML' : 'Software'}
    </span>
  </div>
  <h3 class="text-lg font-semibold text-gray-900 group-hover:text-accent dark:text-gray-100 dark:group-hover:text-accent-dark">
    {title}
  </h3>
  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
    {description}
  </p>
  {tech.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-1.5">
      {tech.map((t) => (
        <span class="rounded-md bg-blue-50 px-2 py-0.5 text-xs text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">
          {t}
        </span>
      ))}
    </div>
  )}
</a>
