---
interface Props {
  tags: string[];
  linkable?: boolean;
}

const { tags, linkable = true } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) =>
    linkable ? (
      <a
        href={`/blog/?tag=${tag}`}
        class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700"
      >
        {tag}
      </a>
    ) : (
      <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
        {tag}
      </span>
    )
  )}
</div>
