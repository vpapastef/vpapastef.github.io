---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <h1 class="text-6xl font-bold text-gray-300 dark:text-gray-700">404</h1>
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">Page not found</p>
    <p class="mt-2 text-gray-500 dark:text-gray-500">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="mt-8 rounded-md bg-gray-900 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-gray-700 dark:bg-gray-100 dark:text-gray-900 dark:hover:bg-gray-300"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
