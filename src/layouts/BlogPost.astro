---
import BaseLayout from './BaseLayout.astro';
import TagList from '../components/TagList.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, tags = [] } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Estimate reading time from the slot content
const wordCount = Astro.slots.has('default') ? 250 : 0; // fallback
---

<BaseLayout title={title} description={description}>
  <article class="prose prose-gray dark:prose-invert mx-auto max-w-none">
    <header class="mb-8 not-prose">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl">
        {title}
      </h1>
      <div class="mt-3 flex flex-wrap items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
        <time datetime={pubDate.toISOString()}>
          {formatDate(pubDate)}
        </time>
        {updatedDate && (
          <span>
            (Updated: <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>)
          </span>
        )}
      </div>
      {tags.length > 0 && (
        <div class="mt-3">
          <TagList tags={tags} />
        </div>
      )}
    </header>
    <slot />
  </article>
</BaseLayout>
